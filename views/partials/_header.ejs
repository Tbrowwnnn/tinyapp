<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="w-100 navbar-nav">
       
       <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active">
          <a class="nav-link" href="/urls">My URLs <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <% if(userID){%>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/urls/logout">
        <label for="username"><b style="padding-right: 10px">Logged in as: <%= userID.email %>! </b></label>
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Logout</button>
      </form>
      <% } else{ %> 
      <form class="form-inline my-2 my-lg-0" method="POST" action="/urls/login">
        <input class="form-control mr-sm-2" type="text" name="username"  placeholder="Username" aria-label="Search">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Login</button>
      </form>
      <% } %>
      </div>
    </div>
  </nav>
</header>